pipeline {
  agent {label 'linux'}
  environment {
    MARIADB_PRIVATE_KEY=credentials('mariadb-private-key')
  }
  stages {
    stage('Hello') {
      steps {
        sh 'ansible-galaxy collection install -r requirements.yml'
        sh 'ansible-playbook -i inventory/mariadb.hosts playbooks/mariadb.yml'
      }
    }
  }
}